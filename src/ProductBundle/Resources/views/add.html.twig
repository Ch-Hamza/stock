{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Ajouter Produit {% endblock %}

{% block body %}

    {{  parent() }}
    <div class="container">
        <div class="jumbotron mt-5">
            <h1 class="display-4">Ajouter Produit</h1>
            <hr class="my-4">
            <div class="container-fluid">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {{ form_row(form.name) }}
                {{ form_row(form.originPrice) }}
                {{ form_row(form.price) }}
                {{ form_row(form.quantity) }}
                {{ form_row(form.category) }}
                {{ form_widget(form.image) }}

                <div class="container-fluid">
                    <div class="row">
                        {{ form_widget(form.save, {'attr': {'class': 'btn bg-teal-300'}}) }}
                        <a class="btn btn-default" href="{{ path('index_products_page') }}">Back</a>
                    </div>
                </div>

                {{ form_errors(form) }}
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}